extend ./layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/shop.css")

block content 
    main
        if prods.length > 0 
            .grid
                each prod in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{prod.title}
                        .card__image
                            img(src="https://cdn.pixabay.com/photo/2022/01/22/16/54/book-6957870_1280.jpg" alt="A Book")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more things!
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products